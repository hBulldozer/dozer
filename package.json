{
  "name": "dozer",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "dotenv -- turbo run build",
    "build-config": "dotenv -- turbo run build --filter={./config/*}",
    "build-config-head": "dotenv -- turbo run build --filter={./config/*}[HEAD^1]...",
    "build-packages": "dotenv -- turbo run build --filter={./packages/*}...",
    "build-packages-head": "dotenv -- turbo run build --filter={./packages/*}[HEAD^1]...",
    "build-protocols": "dotenv -- turbo run build --filter={./protocols/*}...",
    "build-protocols-head": "dotenv -- turbo run build --filter={./protocols/*}[HEAD^1]...",
    "build-scripts": "dotenv -- turbo run build --filter={./scripts/*}[HEAD^1]...",
    "build-earn-app": "dotenv -- turbo run build --filter=earn...[HEAD^1]",
    "changeset": "changeset",
    "changeset-publish": "changeset publish",
    "changeset-version": "changeset version",
    "check": "turbo run check --no-cache --parallel --continue --filter=!{./scripts/*}",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "dotenv -- turbo run dev --no-cache --parallel --continue",
    "disable-remote-caching": "turbo unlink && rm -rf ./node_modules/.cache/turbo",
    "enable-remote-caching": "turbo link",
    "format": "prettier --write \"**/*.{ts,cts,mts,tsx,md,js,cjs,mjs}\"",
    "generate": "dotenv -- turbo run db:generate",
    "lint": "turbo run lint --parallel",
    "lint-apps": "turbo run lint --filter={./apps/*}[HEAD^1]...",
    "lint-config": "turbo run lint --filter={./config/*}[HEAD^1]...",
    "lint-packages": "turbo run lint --filter={./packages/*}[HEAD^1]...",
    "lint-protocols": "turbo run lint --filter={./protocols/*}[HEAD^1]...",
    "lint:ci": "turbo run lint --parallel --filter=[HEAD^1]",
    "prepare": "is-ci || husky install",
    "publish-packages": "turbo run build --filter=./packages/* && changeset version && changeset publish",
    "sort": "sort-package-json 'package.json' 'apis/*/package.json' 'apps/*/package.json' 'config/*/package.json' 'examples/*/package.json' 'packages/{,!(node_modules)/}**/package.json' 'protocols/{,!(node_modules)/}**/package.json' 'scripts/*/package.json'",
    "sort-check": "sort-package-json 'package.json' 'apis/*/package.json' 'apps/*/package.json' 'examples/*/package.json' 'packages/{,!(node_modules)/}**/package.json' 'protocols/{,!(node_modules)/}**/package.json' --check",
    "test": "dotenv -- turbo run test --parallel",
    "test-apps": "dotenv -- turbo run test --filter={./apps/*}[HEAD^1]...",
    "test-config": "dotenv -- turbo run test --filter={./config/*}[HEAD^1]...",
    "test-packages": "dotenv -- turbo run test --filter={./packages/*}[HEAD^1]...",
    "test-protocols": "dotenv -- turbo run test --filter={./protocols/*}[HEAD^1]...",
    "test-swap-app": "dotenv -- turbo run test --filter=swap",
    "version-config": "dotenv -- turbo run build --filter=./config/* && changeset version",
    "version-packages": "dotenv -- turbo run build --filter=./packages/* && changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "2.26.0",
    "@dozer/eslint-config": "workspace:*",
    "@dozer/jest-config": "workspace:*",
    "@dozer/prettier-config": "workspace:*",
    "@dozer/typescript-config": "workspace:*",
    "@types/jest": "29.2.5",
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "dotenv-cli": "6.0.0",
    "eslint": "8.29.0",
    "eslint-config-next": "13.1.2",
    "eslint-config-prettier": "8.6.0",
    "eslint-config-turbo": "1.10.14",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "eslint-plugin-testing-library": "5.9.1",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "29.3.1",
    "prettier": "2.8.2",
    "prettier-plugin-tailwindcss": "0.2.1",
    "sort-package-json": "2.1.0",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.2",
    "turbo": "1.11.2"
  },
  "packageManager": "pnpm@8.6.0",
  "engines": {
    "node": ">=16.x",
    "pnpm": ">=8.x"
  },
  "pnpm": {
    "overrides": {
      "typescript": "5.1.6"
    }
  }
}
