{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".eslintignore",
    ".eslint.js",
    ".npmrc",
    ".nvmrc",
    ".prettierignore",
    ".prettierrc.js",
    "tsconfig.json"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "ROOT_URL",
        "SWAP_URL"
      ],
      "outputs": [
        ".vercel/**/*",
        ".next/**/*",
        ".mesh/**/*",
        "dist/**/*",
        "typechain/**/*",
        "artifacts/**/*",
        "cache/**/*",
        "public/**/*",
        "storybook-static/**/*"
      ]
    },
    "//#build-config": {
      "dependsOn": [],
      "outputs": ["dist/**/*"],
      "inputs": []
    },
    "//#build-packages": {
      "dependsOn": [],
      "outputs": [
        ".graphclient/**/*",
        "dist/**/*"
      ],
      "inputs": []
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
