{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src/",
    "types": ["node", "jest"]
  },
  "include": ["src"],
  "exclude": ["__tests__/", "node_modules", "dist"]
}