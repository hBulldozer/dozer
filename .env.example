# ==================================================================
# Dozer Protocol Environment Variables
#
# This file contains all environment variables needed by the
# applications and packages in this monorepo.
# Copy this file to .env and fill in the correct values.
# ==================================================================


# --- Core Application & API ---
# ------------------------------------
# The nano contract ID of the deployed DozerPoolManager singleton contract.
# This is output by the `pnpm seed:nc` script.
POOL_MANAGER_CONTRACT_ID=

# The connection string for the primary database.
DATABASE_URL=

# The connection string for the database, specifically for Prisma.
POSTGRES_PRISMA_URL=

# URLs for the different applications.
ROOT_URL=http://localhost:9000
SWAP_URL=http://localhost:9001
EARN_URL=http://localhost:9002

# --- Hathor Network ---
# ------------------------------------
# The URL for the local Hathor full-node.
NEXT_PUBLIC_LOCAL_NODE_URL=http://localhost:8080/v1a/

# The URL for a public Hathor full-node (used as a fallback).
NEXT_PUBLIC_PUBLIC_NODE_URL=https://node1.mainnet.hathor.network/v1a/

# The URL for the local Hathor explorer.
NEXT_PUBLIC_LOCAL_EXPLORER_URL=http://localhost:3000/explorer


# --- Seeding & Development ---
# ------------------------------------
# These variables are required to run the seeding scripts (pnpm seed:nc).
WALLET_ID=dozer-wallet
WALLET_API_KEY=dozer-key
LOCAL_WALLET_MASTER_URL=http://localhost:8000
LOCAL_WALLET_USERS_URL=http://localhost:8001
LOCAL_WALLET_MASTER_ADDRESS=
POOL_MANAGER_BLUEPRINT_ID=


# --- Third-Party Services ---
# ------------------------------------
API_KEY=
ZEALY_CONNECT_SECRET=
ZEALY_API_KEY=
MATOMO_API_KEY=
NEXT_PUBLIC_MATOMO_URL=
NEXT_PUBLIC_MATOMO_SITE_ID=
SUPABASE_ANON_KEY=


# --- Legacy & Other Blueprints ---
# ------------------------------------
# These are for legacy contracts or other parts of the system.
LPBLUEPRINT=
OASISBLUEPRINT=
BETBLUEPRINT=

# --- Global Environment ---
# ------------------------------------
# Set to "true" in CI environments.
CI=
# Typically "development" or "production".
NODE_ENV=development
